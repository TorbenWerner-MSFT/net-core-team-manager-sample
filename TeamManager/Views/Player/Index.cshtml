@model List<Player>

@{
}

<div class="row">
    <div class="col-md-12">
        <a class="btn btn-primary btn-sm" asp-controller="Player" asp-action="Create">Create Player</a> <br/> &nbsp;
    </div>
</div>

<div class="row">
    @foreach (var player in Model)
    {
        <div class="col-md-3">
            <div class="card" style="">
                <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Image cap" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect><text x="50%" y="50%" fill="#dee2e6" dy=".3em">Player Picture</text></svg>
                <div class="card-body">
                    <h5 class="card-title"><a asp-controller="Player" asp-action="Detail" asp-route-id="@player.Id">@player.ShirtNumber - @player.Name</a></h5>
                    <p class="card-text">Our <i>@player.Position</i> Player.</p>
                    <a asp-controller="Player" asp-action="Edit" asp-route-id="@player.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-controller="Player" asp-action="Delete" asp-route-id="@player.Id" class="btn btn-primary btn-sm">Delete</a>
                </div>
            </div>
            <br/>
        </div>
    }
</div>



